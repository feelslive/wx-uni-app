.mine {
  overflow: hidden;
}
.mine .border_solid::after {
  content: ' ';
  position: absolute;
  pointer-events: none;
  box-sizing: border-box;
  top: -50%;
  left: -50%;
  right: -50%;
  bottom: -50%;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  border-bottom: 1px solid #d7d7db;
}
.mine .user-info {
  height: 186rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  padding: 0 30rpx;
}
.mine .user-info image {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  margin-right: 34rpx;
}
.mine .user-info-name {
  color: #fff;
  font-size: 32rpx;
  margin-top: 36rpx;
  line-height: 1;
}
.mine .user-box {
  position: absolute;
  top: 128rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.mine .user-box .user-card {
  width: 690rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.mine .user-box .user-card-title {
  height: 80rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 80rpx;
  text-indent: 20rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.mine .user-box .user-card-title .xx-icon {
  margin-right: 10rpx;
}
.mine .user-box .user-card-items {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  margin-top: 28rpx;
  padding-bottom: 30rpx;
}
.mine .user-box .user-card-items .user-card-address {
  width: 100%;
  text-align: left;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
