<view class="order-card"><view class="order-card-top"><view class="order-card-top-yime">{{item.create_time}}</view><view class="order-card-top-status" style="color:#333;">{{item.order_status_name+" ¥"+item.pay_actual}}</view></view><view class="order-card-center border_solid" data-id="{{item.order_number}}" data-event-opts="{{[['tap',[['onOrderDetail',['$event']]]]]}}" bindtap="__e"><view class="order-card-center-box"><view class="order-card-center-icon"><image src="{{item.img_url}}" data-index="{{item.order_number}}" binderror="onErrorImg"></image></view><view class="order-card-center-project"><block wx:if="{{item.product_type=='2'}}"><view class="order-card-center-title">{{item.product_name+"【"+item.product_type_name+"】"}}</view></block><block wx:else><view class="order-card-center-title">{{item.product_name}}</view></block><block wx:if="{{item.product_type=='2'&&item.service_expire_time!=''}}"><view class="order-card-center-info"><view class="order-card-center-text">{{'有效期:'+item.service_start_time+''}}<text>{{"至"+item.service_expire_time}}</text></view></view></block><view class="order-card-center-info"><view class="order-card-center-text">{{item.address}}</view></view></view></view></view><view class="order-card-button"><view class="order-card-button-left">{{"剩"+item.remaining_time+"/共"+item.total_num}}</view><view class="order-card-button-right"><block wx:if="{{item.order_status=='2'&&item.remaining_time>=1}}"><van-button vue-id="1a6949d4-1" custom-class="modify" plain="{{true}}" round="{{true}}" data-type="{{item.product_type}}" data-name="{{item.product_name}}" data-id="{{item.order_number}}" data-num="{{item.remaining_time}}" data-unit="{{item.product_unit_name}}" data-event-opts="{{[['^click',[['onMakeOrder']]]]}}" data-com-type="wx" bind:click="__e" bind:__l="__l" vue-slots="{{['default']}}">预约项目</van-button></block><block wx:if="{{item.order_status=='1'}}"><van-button vue-id="1a6949d4-2" custom-class="modify" plain="{{true}}" round="{{true}}" color="#FF4242" data-orderid="{{item.order_number}}" data-event-opts="{{[['^click',[['onPay']]]]}}" data-com-type="wx" bind:click="__e" bind:__l="__l" vue-slots="{{['default']}}">去支付</van-button></block></view></view></view>